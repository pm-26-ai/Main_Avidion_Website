generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactUs {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phoneNumber String
  query       String
  createdAt   DateTime @default(now())
}

enum Position {
  WebDeveloper
  GraphicDesigner
  DigitalMarketing
  BusinessDevelopmentExecutive
}

enum Experience {
  Fresher
  YearOfExperience
}

model Careers {
  id             Int      @id @default(autoincrement())
  name           String
  email          String
  phoneNumber    String
  address        String
  experience     Experience
  year           String?
  months         String?
  position       Position
  currentSalary  String?
  expectedSalary String
  comments       String?
  resumeLink     String
}
